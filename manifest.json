{
	"name": "Soothe",
	"description": "Browse the web with peace of mind.",
	"version": "0.0.0.1",
	"manifest_version": 2,
	"icons": {
    "16": "public/img/.png",
    "48": "public/img/.png",
    "128": "public/img/.png"
	},
	"background": {
		"scripts": [

		]
	},
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": [

			],
			"run_at": "document_start"
		}
	],
	"permissions": [
		"tabs", "http://*/*", "activeTab", "storage", "debugger"
	],
	"web_accessible_resources": [

	],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
	"browser_action": {
		"default_title": "Soothe",
		"default_popup": "public/index.html"
	}
}
